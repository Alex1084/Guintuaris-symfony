{% extends 'base.html.twig' %}

{% block title %}
	{{classe.nom}}
	|
	{{parent()}}
{% endblock %}

{% block style %}
	<link rel="stylesheet" href="{{asset('style/dropdown.css')}}">
{% endblock %}

{% block body %}
	<h1>
		{{classe.nom}}
	</h1>

	<h2>Description</h2>
	<p>{{ classe.description}}</p>

	<h2>Dé de niveau</h2>
	<p>{{ classe.dePv}}</p>
	<p>{{ classe.dePc}}</p>
	<p>{{ classe.dePm}}</p>

	<div class="container">
		<h2 id="title">Compétences</h2>
	</div>
	<div class="container">
		<div class="div-competence">
			{% for competence in competences %}
				<div class="competence">
					<div class="dropdown">
						<button class="dropbtn">
							{{competence.nom}}
							,
							{{competence.cout}}
							<img src="{{ asset('img/list.png')}}" alt="" class="drop-logo" height="10"></button>
						<div class="hidden dropdown-content">
							<textarea readonly>{{ competence.description }}</textarea>
						</div>
					</div>
				</div>
			{% endfor %}
		</div>
	</div>


{% endblock %}

{% block script %}
	<script src="{{asset('script/dropdown.js')}}"></script>
{% endblock %}
