{% extends 'base.html.twig' %}

{% block title %}
	{{classe.nom}}
	|
	{{parent()}}
{% endblock %}

{% block style %}
	<link rel="stylesheet" href="{{asset('style/dropdown.css')}}">
{% endblock %}

{% block body %}
	<h1>
		{{classe.nom}}
	</h1>

	<h2>Description</h2>
	<p>{{ classe.description}}</p>

	<h2>Dé de niveau</h2>
	<p>{{ classe.dePv}}</p>
	<p>{{ classe.dePc}}</p>
	<p>{{ classe.dePm}}</p>

	<h2>Compétences</h2>
	{% set row = 0 %}
	{% for competence in competences %}
		{% set row = row + 1 %}
		{% if row  == 1 %}
			<div class="row">
			{% endif %}
			<div class="col-md-6">
				<div class="dropdown">
					<button class="dropbtn">
						{{competence.nom}}
						,
						{{competence.cout}}
						<img src="{{ asset('img/list.png')}}" alt="" class="drop-logo" height="10"></button>
					<div class="dropdown-content">
						<p class="content">{{ competence.description }}</p>
					</div>
				</div>
			</div>
			{% if row == 2 %}
			</div>
			{% set row = 0 %}
		{% endif %}
	{% endfor %}

{% endblock %}

{% block script %}
	<script src="{{asset('script/dropdown.js')}}"></script>
{% endblock %}
