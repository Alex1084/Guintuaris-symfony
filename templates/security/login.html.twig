{% extends 'base.html.twig' %}

{% block title %}Log in |
	{{parent()}}
{% endblock %}

{% block body %}
	<form method="post">
		{% if error %}
			<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
		{% endif %}

		{% if app.user %}
			<div class="mb-3">
				You are logged in as
				{{ app.user.username }},
				<a href="{{ path('app_logout') }}">Logout</a>
			</div>
		{% endif %}

		<h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
		<div class="container">
			<div class="row">
				<div class="col-md-12 div-form">
					<label for="inputEmail">Email</label>
					<br>
					<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="log" autocomplete="email" required autofocus>
				</div>

				<div class="col-md-12 div-form">
					<label for="inputPassword">Password</label>
					<br>
					<input type="password" name="password" id="inputPassword" class="log" autocomplete="current-password" required>
				</div>

			</div>
		</div>


		<input
		type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

		{#
												        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
												        See https://symfony.com/doc/current/security/remember_me.html
												
												        <div class="checkbox mb-3">
												            <label>
												                <input type="checkbox" name="_remember_me"> Remember me
												            </label>
												        </div>
												    #}

		<button class="valid-form" type="submit">

			Sign in
		</button>
	</form>
{% endblock %}
