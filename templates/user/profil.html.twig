{% extends 'base.html.twig' %}

{% block title %} Profil | {{parent()}}{% endblock %}

{% block body %}
    <h1>Profil: {{ user.nom }}</h1>
    


    {% if app.user.id == user.id %}
        <h3>Mes infos: </h3>
        <p>Username: {{ user.username }}</p>
        <p>Email: {{ user.email }}</p>
        <p>Nom: {{ user.nom }}</p>

        <h3>Mes personnages: </h3>
        <a href="{{ path("personnage_list")}}"><img src="{{asset("img/list.png")}}" alt="" height="10">Mes personnages</a>
    {% else%}
        <p>Infos filtr√©s</p>
    {% endif %}

{% endblock %}
