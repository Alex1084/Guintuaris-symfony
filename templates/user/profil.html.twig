{% extends 'base.html.twig' %}

{% block title %} Profil | {{parent()}}{% endblock %}

{% block body %}
    {% for message in app.flashes('success') %}
        <div class="flash success">
            {{ message }}
        </div>
    {% endfor %}
    <h1>Profil: {{ user.name }}</h1>
    


        <h3>Mes infos: </h3>
        <p>Email: {{ user.email }}</p>
        <p>Nom: {{ user.name }}</p>

        <a class="link" href="{{path("profil_update_password")}}">change password</a>
        <a class="link" href="{{path("profil_update_account")}}">update user</a>
        <a class="link" href="{{path("profile_delete")}}" class="notes" id="delete-account">Supprimmer mon Compte</a>
        <h3>Mes personnages: </h3>
        <a class="link" href="{{ path("character_list")}}">Mes personnages</a>
{% endblock %}

{% block script %}
    <script src="{{asset("script/delete.js")}}"></script>
{% endblock %}