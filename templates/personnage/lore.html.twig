{% extends 'base.html.twig' %}

{% block title %}
	Mon lore |
	{{parent()}}
{% endblock %}

{% block body %}
	{% if app.user.id == personnage.joueur.id %}
		<div class="container">
			{{ form_start(loreForm)}}
			<div class="row">
				<div class="col-md-12 div-form">
					<h3 class="title-form">
						{{ form_label(loreForm.lore) }}
					</h3>
					<br>
					{{ form_widget(loreForm.lore) }}
				</div>
			</div>

			<button class="valid-form">Valider</button>
			{{ form_end(loreForm)}}
		</div>
	{% endif %}
{% endblock %}
