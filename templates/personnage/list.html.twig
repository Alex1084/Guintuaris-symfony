{% extends 'base.html.twig' %}

{% block title %} Mes Personnages | {{parent()}}{% endblock %}

{% block body %}
    <div class="div-link">
        
    </div>
    <div class="container">
        <h2 class="titre-table">Fiches personnages</h2>
        <table class="tableau">
            <thead>
                <tr>
                    <th scope="col">image</th>
                    <th scope="col">nom</th>
                    <th>niveau</th>
                    <th>equipe</th>
                    <th scope="col">action</th>
                </tr>
            </thead>
            <tbody>
                {% for character in characters %}
                    <tr>
                        <td>
                            <img src="{{asset('image_personnage/'~ character.image)}}" alt="" height="50">
                        </td>
                        <td>
                            <a href="{{ path("character_view", {"slug" : character.slug, "id" : character.id}) }}">{{ character.name }}</a>
                        </td>
                        <td>{{character.level}}</td>
                        <td>
                            {% if character.teamId != null %}
                                <a href="{{path("team_list", {"teamSlug" : character.teamSlug,"teamId" :character.teamId})}}">{{character.teamName}}</a>
                            {% endif %}
                        </td>
                        <td>
                            <a href="{{ path("character_setting", {"slug" : character.slug, "id" : character.id})}}">Param√®tres</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
    <div class="navside-container">
        <div class="div-show-navside show">
			<a href="" id="show-navside">Navigation</a>
		</div>
		<div class="navside navside-hidden">
            {% block link %}
                <a href="{{ path("create_character")}}"><img src="{{asset("img/list.png")}}" alt="" height="10">Nouveau personnage</a>
            {% endblock %}
        </div>
	</div>
{% endblock %}
