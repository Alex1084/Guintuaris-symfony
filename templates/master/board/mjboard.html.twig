{% extends 'base.html.twig' %}

{% block title %}Tableau de maitre du jeu |{{parent()}}{% endblock %}

{% block style %}
	<link rel="stylesheet" href="{{asset("style/minifiche.css")}}">
	<link rel="stylesheet" href="{{asset("style/dropdown.css")}}">
	<link rel="stylesheet" href="{{asset("style/sidebar.css")}}">
{% endblock %}
{% block body %}
	<div id="wrapper">
		<div class="page-content-wrapper">
			<h1 class="title">Tableau Bestiaire</h1>
			<div class="board"></div>
		</div>
		<div class="sidebar-container">
			<div class="sidebar-link">
				<a href="#" id="menu-toggle">Bestiaire</a>
			</div>
			<div class="sidebar-wrapper">
				<div class="sidebar-nav">
					{% for bestiaryType in list %}
						<div class="dropdown">
							<button class="dropbtn nav-btn">{{bestiaryType.typeName}}</button>
							<div class="dropdown-content hidden">
								{% for beast in bestiaryType.beasts %}
										<a title="Invoquation de {{beast.name}}" href="{{ path('summon', {"id" : beast.id})}}" class="creature-name">{{beast.name}}</a>
								{% endfor %}
							</div>
						</div>
					{% endfor %}
				</div>
			</div>
		</div>
	</div>
{% endblock %}
{% block script %}
	<script src="{{ asset("script/bar.js")}}"></script>
	<script src="{{ asset("script/minifiche.js")}}"></script>
	<script src="{{ asset("script/sidebar.js")}}"></script>
	<script src="{{ asset("script/dropdown.js")}}"></script>
{% endblock %}
