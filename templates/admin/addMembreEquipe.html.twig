{% extends 'base.html.twig' %}

{% block title %}
	Ajouter un membre |
	{{parent()}}
{% endblock %}

{% block body %}
	<div class="container">
		{{form_start(memberForm)}}
		{{form_widget(memberForm)}}
		<button>Ajouter !</button>
		{{form_end(memberForm)}}
		<ul>
			{% for member in teamMembers %}
				<li>
					<a href="{{ path("team_sheet_view", {"teamId" : teamId, "characterId" : member.id}) }}">{{ member.name }}</a>
					<a class="ajax-delete-link" href="{{ path("admin_delete_team_member", {"characterId" : member.id}) }}">Supprimmer</a>
				</li>
			{% endfor %}
		</ul>
	</div>


{% endblock %}


{% block script %}
	<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
	<script src="{{ asset("script/delete.js")}}"></script>
{% endblock %}