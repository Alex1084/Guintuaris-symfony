{% extends 'base.html.twig' %}
{% block title %}
	Bestiaire admin|
	{{parent()}}
{% endblock %}

{% block body %}
	<h2>Liste du bestiaire</h2>
	<div class="container">
		{% for message in app.flashes('success') %}
			<div class="flash success">
				{{ message }}
			</div>
		{% endfor %}
		{% for message in app.flashes('error') %}
			<div class="flash success">
				{{ message }}
			</div>
		{% endfor %}
    <div class="">
        <a href="{{ path("admin_add_bestiary")}}">Creer une bÃªte</a>
    </div>
		<table class="tableau" id="bestiary">
			<thead>
				<tr>
					<th>Id</th>
					<th>Name</th>
					<th>Niveau</th>
					<th>Type</th>
					<th></th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				{% for creature in creatures %}
					<tr>
						<td class="data-id"> {{creature.id}} <td>
						<td class="data-name"> {{ creature.name }} <td>
						<td> {{ creature.typeName }} <td>
						<td> {{ creature.level }} <td>
						<td>
							<a href="{{ path("admin_update_bestiary", {'bestiaryId' : creature.id}) }}">Modifier</a>
						<td>
						<td>
							<a class="ajax-delete-link alert" href="{{ path("admin_delete_bestiary", {'bestiaryId' : creature.id}) }}">Supprimer</a>
						<td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
{% endblock %}


{% block script %}
	<script src="{{ asset("script/delete.js")}}"></script>
{% endblock %}