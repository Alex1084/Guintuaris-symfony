{% extends 'base.html.twig' %}
{% block title %} Races | {{parent()}}{% endblock %}

{% block body %}
	<h1 class="title">Races</h1>
	<div class="container">
		{% for message in app.flashes('success') %}
			<div class="flash success">
				{{ message }}
			</div>
		{% endfor %}
		<button class="default-sort">Tri par defaut</button>
		<table class="tableau">
			<thead>
				<tr>
					<th class="sortable number">Id</th>
					<th class="sortable text">Nom</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				{% for race in races %}

					<tr>
						<td> {{race.id}} </td>
						<td> {{ race.name }} </td>
						<td>
							<a href="{{ path("admin_update_race", {'slug' : race.slug}) }}">Modifier</a>
						</td>
					</tr>
						
				{% endfor %}
			</tbody>
		</table>
	</div>
{% endblock %}

{% block navside %}
	{% set navsideDisplay = true %}
	{% set navsideLinks = [
		jsonLinks.returnAdmin,
		jsonLinks.createRace,
		jsonLinks.classes,
		jsonLinks.skills,
	]%}
	{{parent()}}
{% endblock %}

{% block script %}
    <script src="{{asset('script/tableau.js')}}"></script>
	<script src="{{ asset("script/delete.js")}}"></script>
{% endblock %}