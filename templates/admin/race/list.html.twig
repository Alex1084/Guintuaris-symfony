{% extends 'base.html.twig' %}
{% block title %}
	Race |
	{{parent()}}
{% endblock %}

{% block body %}
	<h2>Races</h2>
	<div class="container">
		{% for message in app.flashes('success') %}
			<div class="flash success">
				{{ message }}
			</div>
		{% endfor %}
		<div class="">
			<a href="{{ path("admin_add_race")}}">Creer une Race</a>
		</div>
		<table class="tableau">
			<thead>
				<tr>
					<th>Id</th>
					<th>Name</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				{% for race in races %}

					<tr>
						<td> {{race.id}} </td>
						<td> {{ race.name }} </td>
						<td>
							<a href="{{ path("admin_update_race", {'slug' : race.slug}) }}">Modifier</a>
						</td>
					</tr>
						
				{% endfor %}
			</tbody>
		</table>
	</div>
{% endblock %}


{% block script %}
	<script src="{{ asset("script/delete.js")}}"></script>
{% endblock %}