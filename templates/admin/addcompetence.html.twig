{% extends 'base.html.twig' %}

{% block title %}
	Ajouter une compétence |
	{{parent()}}
{% endblock %}

{% block body %}
	<div class="container">
		{{ form_start(competenceForm) }}
		<div>
			<h3 class="title-form">Géneral</h3>
			<div class="row">
				<div class="div-form">{{ form_label(competenceForm.nom) }}
					
					{{ form_widget(competenceForm.nom) }}
				</div>
				<div class="div-form">{{ form_label(competenceForm.niveau) }}
					
					{{ form_widget(competenceForm.niveau) }}
				</div>
				<div class="div-form">{{ form_label(competenceForm.classe) }}
					
					{{ form_widget(competenceForm.classe) }}
				</div>
			</div>
		</div>
		<div>
			<h3 class="title-form">Précisions</h3>
			<div class="row">
				<div class="div-form">{{ form_label(competenceForm.cout) }}
					
					{{ form_widget(competenceForm.cout) }}
				</div>
				<div class="div-form">{{ form_label(competenceForm.portee) }}
					
					{{ form_widget(competenceForm.portee) }}
				</div>
				<div class="div-form">{{ form_label(competenceForm.degat) }}
					
					{{ form_widget(competenceForm.degat) }}
				</div>
			</div>
		</div>
		<div class="row">
			<div class="textarea-form">
				<h3 class="title-form">
					{{ form_label(competenceForm.description) }}
				</h3>
				
				{{ form_widget(competenceForm.description) }}

			</div>
		</div>

		<button class="valid-form">Ajouter !</button>
		{{form_end(competenceForm)}}
	</div>
{% endblock %}
