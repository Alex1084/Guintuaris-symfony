    <ul>
    {% for team in teams %}
        <li>
            <a href="{{ path("admin_add_member", {"teamId" : team.id}) }}">{{ team.name }}</a>
            <a class="ajax-delete-link" href="{{ path(pathDeleteName,  { "id": team.id}) }}">Supprimer</a>
        </li>
    {% endfor %}
    </ul>

{{form_start(addTeamForm) }}
{{form_widget(addTeamForm) }}
<button>Créer</button>
{{form_end(addTeamForm) }}
{% endblock %}

