{% extends 'base.html.twig' %}

{% block title %}Liste utilisateur | {{parent()}}{% endblock %}

{% block body %}
    <div class="container">
        {% for message in app.flashes('success') %}
            <div class="flash success">
                {{ message }}
            </div>
        {% endfor %}
        <table class="tableau">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nom</th>
                    <th>Email</th>
                    <th>Role</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                {% for user in users %}
                    <tr>
                        <td>{{user.id}}</td>
                        <td>{{user.name}}</td>
                        <td>{{user.email}}</td>
                        <td>{{user.roles[0]}}</td>
                        <td><a href="{{path("admin_user_gestion", {"id" : user.id})}}">Modifier</a></td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
