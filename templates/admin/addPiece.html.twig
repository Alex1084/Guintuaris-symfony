{% extends 'base.html.twig' %}

{% block title %}
	Ajouter une pièce d'armure |
	{{parent()}}
{% endblock %}

{% block body %}
	<div class="container">
		{{form_start(pieceForm)}}
		<div class="row">

			<div class="div-form">{{ form_label(pieceForm.location)}}{{form_widget(pieceForm.location)}}</div>
			<div class="div-form">{{ form_label(pieceForm.type)}}{{form_widget(pieceForm.type)}}</div>
			<div class="div-form">{{ form_label(pieceForm.value)}}{{form_widget(pieceForm.value)}}</div>
		</div>
		<div>
			<button class="valid-form">Créer</button>
		</div>
		{{form_end(pieceForm)}}
	</div>
	<div class="container">
		<table class="tableau">
			<tr>
				<th>Id</th>
				<th>Emplacement</th>
				<th>Type</th>
				<th>Valeur</th>
			</tr>
			{% for piece in piecesTab %}
				<tr>
					<th>{{piece.id}}</th>
					<th>{{piece.location.name}}</th>
					<th>{{piece.type.name}}</th>
					<th>{{piece.value}}</th>
				</tr>
			{% endfor %}
		</table>
	</div>
{% endblock %}
