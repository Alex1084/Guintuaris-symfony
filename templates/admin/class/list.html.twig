{% extends 'base.html.twig' %}
{% block title %}Classes | {{parent()}}{% endblock %}

{% block body %}
	<div class="container">
		<h1 class="title">Classes</h1>
		{% for message in app.flashes('success') %}
			<div class="flash success">
				{{ message }}
			</div>
		{% endfor %}
		<button class="default-sort">Tri par defaut</button>
		<table class="tableau">
			<thead>
				<tr>
					<th class="sortable number">Id</th>
					<th class="sortable text">Nom</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				{% for class in classs %}

					<tr>
						<td> {{class.id}} </td>
						<td> {{ class.name }} </td>
						<td>
							<a title="Modifier la classe {{class.name}}" href="{{ path("admin_update_class", {'slug' : class.slug}) }}">Modifier</a>
						</td>
					</tr>
						
				{% endfor %}
			</tbody>
		</table>
	</div>
{% endblock %}

{% block navside %}
	{% set navsideDisplay = true %}
	{% set navsideLinks = [
		jsonLinks.returnAdmin,
		jsonLinks.createClass,
		jsonLinks.races,
		jsonLinks.skills,
	]%}
	{{parent()}}
{% endblock %}
