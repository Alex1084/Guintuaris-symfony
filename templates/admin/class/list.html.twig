{% extends 'base.html.twig' %}
{% block title %}Classes | {{parent()}}{% endblock %}

{% block body %}
	<div class="container">
		<h1 class="title">Classes</h1>
		{% for message in app.flashes('success') %}
			<div class="flash success">
				{{ message }}
			</div>
		{% endfor %}
		<button class="default-sort">Tri par defaut</button>
		<table class="tableau">
			<thead>
				<tr>
					<th class="sortable number">Id</th>
					<th class="sortable text">Nom</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				{% for class in classs %}

					<tr>
						<td> {{class.id}} </td>
						<td> {{ class.name }} </td>
						<td>
							<a title="Modifier la classe {{class.name}}" href="{{ path("admin_update_class", {'slug' : class.slug}) }}">Modifier</a>
						</td>
					</tr>
						
				{% endfor %}
			</tbody>
		</table>
	</div>
	<div class="navside-container">
		<div class="div-show-navside show">
			<a href="" id="show-navside">Navigation</a>
		</div>
		<div class="navside navside-hidden">
			<a title="Retour a l'accueil administrateur" class="link" href="{{ path('admin_home')}}">Retour</a>
        	<a title="Créer un nouvelle competence" class="link" href="{{ path("admin_add_class")}}">Creer une nouvelle classe</a>
			<a title="List des races" class="link" href="{{ path('admin_race_list')}}">Races</a>
			<a title="List des competences" class="link" href="{{ path('admin_skill_list')}}">Compétences</a>

		</div>
	</div>
{% endblock %}


{% block script %}
    <script src="{{asset('script/tableau.js')}}"></script>
	<script src="{{ asset("script/delete.js")}}"></script>
{% endblock %}