{% block body %}
	<div class="container">
		{{ form_start(beteForm) }}
		<div>
			<h3 class="title-form">Monstre</h3>
		</div>
		<div class="row">
			<div class="div-form">{{ form_label(beteForm.name) }}
				
				{{ form_widget(beteForm.name) }}
			</div>

			<div class="div-form">{{ form_label(beteForm.level) }}
				
				{{ form_widget(beteForm.level) }}
			</div>
			<div class="div-form">{{ form_label(beteForm.Type) }}
				
				{{ form_widget(beteForm.Type) }}
			</div>
		</div>
		<div>
			<h3 class="title-form">Statut</h3>
		</div>
		<div class="row">
			<div class="div-form">{{ form_label(beteForm.pvMax) }}
				
				{{ form_widget(beteForm.pvMax) }}
			</div>
			<div class="div-form">{{ form_label(beteForm.pmMax) }}
				
				{{ form_widget(beteForm.pmMax) }}
			</div>
			<div class="div-form">{{ form_label(beteForm.pcMax) }}
				
				{{ form_widget(beteForm.pcMax) }}
			</div>
		</div>
		<div>
			<h3 class="title-form">Statistiques</h3>
		</div>
		<div class="row">
			<div class="div-form">{{ form_label(beteForm.constitution) }}
				
				{{ form_widget(beteForm.constitution) }}
			</div>
			<div class="div-form">{{ form_label(beteForm.strength) }}
				
				{{ form_widget(beteForm.strength) }}
			</div>
			<div class="div-form">{{ form_label(beteForm.dexterity) }}
				
				{{ form_widget(beteForm.dexterity) }}
			</div>

		</div>
		<div class="row">
			<div class="div-form">{{ form_label(beteForm.intelligence) }}
				
				{{ form_widget(beteForm.intelligence) }}
			</div>
			<div class="div-form">{{ form_label(beteForm.charisma) }}
				
				{{ form_widget(beteForm.charisma) }}
			</div>
			<div class="div-form">{{ form_label(beteForm.faith) }}
				
				{{ form_widget(beteForm.faith) }}
			</div>
		</div>
		<div class="row">
			<div class="textarea-form">
				<h3 class="title-form">
					{{ form_label(beteForm.note) }}
				</h3>
				
				{{ form_widget(beteForm.note) }}
			</div>
		</div>
		<button class="valid-form">Ajouter !</button>
		{{form_end(beteForm)}}
	</div>
